<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mydarties">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".dir.HomeDir"
            android:label="MyDarties - Dir Magasin"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".resp.HomeResp"
            android:label="MyDarties - Resp Région"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".dir.ResultDir"
            android:label="MyDarties - Résultts"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".dir.SaisirDir"
            android:label="MyDarties - Saisie"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".setting.Setting"
            android:label="MyDarties - Setting" />
        <activity
            android:name=".setting.SettingDirNewPasswd"
            android:label="MyDarties - New Password"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".resp.ConsultForm"
            android:label="MyDarties - Consulter"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".resp.ResultResp"
            android:label="MyDarties - Resultat"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".dir.SaisirProduct"
            android:label="MyDarties - Saisie Product"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
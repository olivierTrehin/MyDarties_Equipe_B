<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_dir"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.mydarties.dir.HomeDir">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_icon"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="false"
        android:cropToPadding="false" />

    <TextView
        android:text="Email :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MailLabelHome"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MailHome"
        android:layout_below="@+id/MailLabelHome"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Profil utilisateur :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ProfilLabelHome"
        android:layout_below="@+id/MailHome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfilLabelHome"
        android:layout_alignParentStart="true"
        android:id="@+id/ProfilHome"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Date de mise à jour :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/DateLabelHome"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="normal|bold"
        android:layout_below="@+id/ProfilHome"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DateLabelHome"
        android:layout_alignParentStart="true"
        android:id="@+id/DateHome"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PrenomHome"
        android:textStyle="normal|bold"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_marginBottom="17dp"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:text="Nom : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NomLabelHome"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NomHome"
        android:textStyle="normal|bold"
        android:layout_below="@+id/NomLabelHome"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView4" />

    <TextView
        android:text="Prénom :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PrenomLabelHome"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:layout_above="@+id/PrenomHome"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView4" />


</RelativeLayout>
</ScrollView>
